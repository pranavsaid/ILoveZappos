<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.example.dpran.ilovezappos.ViewModel.MainViewModel"/>
        <import type="android.view.View" />

        <variable
            name="model"
            type="MainViewModel"/>

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:background="@android:color/white">
    <ScrollView
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/username"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:inputType="text"
                android:hint="@string/edit_message"
                android:imeOptions="actionSearch"
                android:maxLines="1"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
           >

            <ImageView
                android:id="@+id/defaultImage"
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/homeimage"
                android:visibility="@{model.pb ? View.GONE : View.VISIBLE}"/>
            <ImageView
                android:id="@+id/product_details_carousel"
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/loading"
                android:visibility="@{model.pb ? View.VISIBLE : View.GONE}"/>


        </RelativeLayout>

        <LinearLayout
           android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:visibility="@{model.pb ? View.VISIBLE : View.GONE}">


            <TextView
                android:id="@+id/product_detail_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="#535250"
                android:textSize="18sp"
                tools:text="@{model.text}" />

            <TextView
                android:id="@+id/product_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="12sp"
                tools:text="@{model.discount}" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/product_detail_offer_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.94"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    tools:text="@{model.price}" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="0.35"
                    android:layout_marginTop="1dp"
                    android:text="Add To Cart"
                    android:layout_marginBottom="2dp"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:textColorLink="@android:color/holo_red_dark"
                    android:background="@android:color/holo_red_light" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#000000" />
            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="12sp"
                tools:text="@{model.discount}" />


        </LinearLayout>

    </LinearLayout>
    </ScrollView>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/AddToCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:src="@{model.isAddedtocart ? @drawable/ic_cart : @drawable/ic_addtocart}"
            app:layout_anchor="@id/mainLayout"
            app:fabSize="normal"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp"
            app:backgroundTint="@{model.isAddedtocart ? @android:color/holo_red_light : @android:color/darker_gray}"
            android:baselineAlignBottom="false"
            android:padding="8dp"
            android:layout_centerVertical="false"
            android:layout_margin="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="true"
            android:visibility="@{model.pb ? View.VISIBLE : View.GONE}"/>
    </RelativeLayout>

</layout>